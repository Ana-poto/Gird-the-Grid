@page "/fetchdata"
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.success.ToString()</td>
                    <td>@forecast.da</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Class[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        var x = await Http.GetFromJsonAsync<Class>("http://localhost:8001/users");
        forecasts = new Class[1];
        forecasts[0] = x;
    }

    public class Class
    {
        public bool success { get; set; }
        public string da { get; set; }
    }
}
